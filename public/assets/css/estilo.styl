nav	
	background black
	border-left 15px solid white
	position relative
	&:before
		border-bottom 20px solid transparent
		border-left 7px solid white
		border-top 20px solid transparent
		content ""
		position absolute
		top 0
		left 0px
	ul
		height 40px
		line-height 40px
		margin 0
		padding 0
		list-style-type none
		white-space nowrap
		li
			float left
			display block
			cursor pointer
			margin 0 3em
			a
				font-weight bold
				color white					
				text-align center
				padding 6px
				text-decoration italic
			&:hover
				ul	
					box-sizing()
					background black
					display block
					height auto					
					width  8em					
					text-align center
					li
						border-style none
						height auto
						margin 0 .2em
						text-align center
						a 							
							border-right green
							// font-size .8em
							margin 0 0
							text-align center
			ul
				display none
				position absolute
